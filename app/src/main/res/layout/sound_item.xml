<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/ivSoundItem"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                app:sriv_left_top_corner_radius="2dip"
                app:sriv_right_top_corner_radius="2dip"
                app:sriv_left_bottom_corner_radius="0dip"
                app:sriv_right_bottom_corner_radius="0dip"
                />

            <TextView
                android:id="@+id/tvSoundItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:text="Ровер"
                android:maxLines="2"
                android:padding="8dp"
                android:lines="2"
                android:gravity="center_vertical" />
        </LinearLayout>

</android.support.v7.widget.CardView>